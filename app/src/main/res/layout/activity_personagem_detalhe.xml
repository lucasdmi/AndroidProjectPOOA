<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PersonagemDetalhe">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="345dp"
        android:layout_height="290dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="269dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtNome"
                android:layout_width="147dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Nome"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

            <EditText
                android:id="@+id/edtNivel"
                android:layout_width="167dp"
                android:layout_height="44dp"
                android:ems="10"
                android:hint="Nível"
                android:inputType="number|numberSigned"
                android:maxLength="2"
                tools:layout_editor_absoluteX="177dp"
                tools:layout_editor_absoluteY="115dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edtClasse"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Classe"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtRaca"
                android:layout_width="71dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Raça"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="159dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edtForca"
                android:layout_width="157dp"
                android:layout_height="52dp"
                android:ems="10"
                android:hint="Força"
                android:inputType="number"
                android:maxLength="2"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="208dp" />

            <EditText
                android:id="@+id/edtDestreza"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Destreza"
                android:inputType="number"
                android:maxLength="2"
                tools:layout_editor_absoluteX="157dp"
                tools:layout_editor_absoluteY="229dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edtCarisma"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Carisma"
                android:inputType="number"
                android:maxLength="2"
                tools:layout_editor_absoluteX="134dp"
                tools:layout_editor_absoluteY="312dp" />

            <EditText
                android:id="@+id/edtSabedoria"
                android:layout_width="92dp"
                android:layout_height="52dp"
                android:ems="10"
                android:hint="Sabedoria"
                android:inputType="number"
                android:maxLength="2"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="260dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <EditText
                android:id="@+id/edtConstituicao"
                android:layout_width="83dp"
                android:layout_height="47dp"
                android:ems="10"
                android:hint="Constituição"
                android:inputType="number"
                android:maxLength="2"
                tools:layout_editor_absoluteX="261dp"
                tools:layout_editor_absoluteY="370dp" />

            <EditText
                android:id="@+id/edtArmadura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:hint="Armadura"
                android:inputType="number"
                android:maxLength="2"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="312dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edtInteligencia"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Inteligência"
                android:inputType="number"
                android:maxLength="2"
                tools:layout_editor_absoluteX="174dp"
                tools:layout_editor_absoluteY="320dp" />

            <EditText
                android:id="@+id/edtExperiencia"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Experiência"
                android:inputType="number"
                android:maxLength="2"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="320dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Salvar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnExcluir"
        app:layout_constraintTop_toBottomOf="@+id/tilBackGround"
        app:layout_constraintVertical_bias="1.0" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilBackGround"
        android:layout_width="0dp"
        android:layout_height="81dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout4">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="BackGround"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnAlterar"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:text="Alterar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilBackGround"
        app:layout_constraintVertical_bias="0.846" />

    <Button
        android:id="@+id/btnExcluir"
        android:layout_width="84dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:text="Excluir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAlterar"
        app:layout_constraintTop_toBottomOf="@+id/tilBackGround"
        app:layout_constraintVertical_bias="0.846" />

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="347dp"
        android:layout_height="58dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <TextView
            android:id="@+id/tvAdicionarIMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/img_add"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="341dp" />

        <Button
            android:id="@+id/btnImg"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="11dp"
            android:text="Imagem"
            android:textAlignment="center"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="325dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>