<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="351dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#CFCFCF"
    app:cardCornerRadius="05dp"
    app:cardElevation="5dp"
    app:contentPadding="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="156dp">

        <RelativeLayout
            android:layout_width="184dp"
            android:layout_height="47dp"
            android:layout_margin="2dp"
            android:background="#C0C0C0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout">

            <TextView
                android:id="@+id/tBG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:foregroundGravity="top"
                android:gravity="top"
                android:lineSpacingExtra="8sp"
                android:padding="1dip"
                android:text="BackGround:"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:typeface="normal"
                tools:elevation="2dp"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="150dp" />

            <TextView
                android:id="@+id/tvBackGround"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_alignParentBottom="true"
                android:lineSpacingExtra="8sp"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark"
                android:textSize="10sp"
                android:textStyle="italic" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="143dp"
            android:layout_height="143dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#C0C0C0"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivPersonagem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="imgP"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="26dp" />
        </LinearLayout>

        <android.support.v7.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="181dp"
            android:layout_height="89dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#C0C0C0"
            app:columnCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginBottom="@dimen/cardview_compat_inset_shadow"
            app:rowCount="1">

            <TextView
                android:id="@+id/tNome"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:text="Nome:"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvNome"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:text="TextView"
                tools:layout_editor_absoluteX="92dp"
                tools:layout_editor_absoluteY="216dp" />

            <TextView
                android:id="@+id/tClasse"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:text="Classe:"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="163dp" />

            <TextView
                android:id="@+id/tvClasse"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="TextView"
                tools:layout_editor_absoluteX="269dp"
                tools:layout_editor_absoluteY="174dp" />

            <TextView
                android:id="@+id/tRaca"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Raça:"
                android:textColor="@android:color/black"
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="194dp" />

            <TextView
                android:id="@+id/tvRaca"
                android:layout_width="146dp"
                android:layout_height="20dp"
                android:layout_margin="1dp"
                android:text="TextView"
                tools:layout_editor_absoluteX="269dp"
                tools:layout_editor_absoluteY="172dp" />

            <TextView
                android:id="@+id/tNivel"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:text="Nível:"
                android:textColor="@android:color/black"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="147dp" />

            <TextView
                android:id="@+id/tvNivel"
                android:layout_width="146dp"
                android:layout_height="22dp"
                android:layout_margin="2dip"
                android:text="TextView"
                tools:layout_editor_absoluteX="169dp"
                tools:layout_editor_absoluteY="194dp" />

        </android.support.v7.widget.GridLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>