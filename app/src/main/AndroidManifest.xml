<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pooa20181.iff.edu.br.androidprojectpooa">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:name=".model.BDConfig"
        android:allowBackup="true"
        android:icon="@mipmap/ic_rg_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_rg_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Principal">
        </activity>
        <activity
            android:name=".activity.ListaPersonagem"
            android:label="@string/title_activity_lista_personagem"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.PersonagemDetalhe" />

        <!-- Splash screen -->
        <activity
            android:name=".activity.SplashScreenActivity"
            android:theme="@style/AppCompat.TelaCheia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>


</manifest>